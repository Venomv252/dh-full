{
  "name": "emergency-incident-platform",
  "version": "1.0.0",
  "description": "Emergency Incident Reporting Platform - Backend API for reporting and managing emergency incidents with geolocation support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:backend": "jest --selectProjects backend",
    "test:frontend": "jest --selectProjects frontend",
    "test:unit": "jest --testPathPattern=unit",
    "test:property": "jest --testPathPattern=property",
    "test:integration": "jest --testPathPattern=integration",
    "seed": "node scripts/seed.js",
    "indexes:create": "node scripts/manage-indexes.js create",
    "indexes:drop": "node scripts/manage-indexes.js drop",
    "indexes:list": "node scripts/manage-indexes.js list",
    "indexes:stats": "node scripts/manage-indexes.js stats",
    "indexes:validate": "node scripts/manage-indexes.js validate",
    "checkpoint": "node scripts/checkpoint-verification.js"
  },
  "keywords": [
    "emergency",
    "incident",
    "reporting",
    "geolocation",
    "mongodb",
    "express",
    "api"
  ],
  "author": "Emergency Platform Team",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "tailwindcss": "^4.1.18",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@faker-js/faker": "^10.1.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.13.2",
    "babel-jest": "^30.2.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
