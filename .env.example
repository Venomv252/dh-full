# Emergency Incident Platform Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/emergency-platform
MONGODB_TEST_URI=mongodb://localhost:27017/emergency-platform-test

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-change-in-production

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting Configuration
RATE_LIMIT_SKIP_FAILED_REQUESTS=true
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Redis Configuration (Optional - for production scaling)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLED=true
TRUST_PROXY=false

# Guest User Configuration
GUEST_MAX_ACTIONS=10
GUEST_SESSION_TIMEOUT=24

# File Upload Configuration (Future use)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Email Configuration (Future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Notification Configuration (Future use)
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_NOTIFICATION_KEY=your-push-notification-key